    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "{{ meta.title }}",
      "image": "{{ meta.img }}",
      "datePublished": "{{ meta.date }}",
      "author": {
        "@type": "Person",
        "name": "{{ meta.author }}",
        "url": "{{ meta.profile }}"
      }
    }
    </script>

    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->

</head>
