<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <meta name="description" content="{{ meta.description|striptags }}">
    <meta name="author" content="{{ config.author }}">

    <title>{{ site_title }} - {{ meta.tagline }}</title>

    <!-- [ Social Media Meta Tags ] -->
    <meta content='{{ site_title }}' property='og:title'/>
    <meta content='website' property='og:type'/>
    <meta content='{{ current_page.url }}' property='og:url'/>
    <meta content='{% if meta.img %}{{ meta.img | url }}{% else %}{{ theme_url }}/img/home-bg.jpg{% endif %}' property='og:image'/>
    <meta content="{{ meta.description|striptags }}" property='og:description'/>
    <meta content='{{ site_title }}' property='og:site_name'/>
    <meta content='en_US' property='og:locale'/>
    <meta content='summary_large_image' name='twitter:card'/>
    <meta content='{{ site_title }}' name='twitter:title'/>
    <meta content='{{ config.twitter }}' name='twitter:site'/>
    <meta content='{{ config.twitter }}' name='twitter:creator'/>
    <meta content='{{ meta.description|striptags }}' name='twitter:description'/>
    <meta content='{% if meta.img %}{{ meta.img | url }}{% else %}{{ theme_url }}/img/home-bg.jpg{% endif %}' name='twitter:image'/>

  <!-- Favicons -->
  <link href="{{ theme_url }}/assets/img/favicon.png" rel="icon">
  <link href="{{ theme_url }}/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="{{ theme_url }}/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="{{ theme_url }}/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="{{ theme_url }}/assets/css/style.css" rel="stylesheet">

